page {
	height: 100%;
}
.container{
  min-height: 100%;
  background-color: #f4f4f4;
  font-size: 24rpx;
  justify-content: initial;
}

.userbox {
  overflow: hidden;
  display: flex;
	flex-direction: column;
  width: 100%;
  align-items: center;
  justify-content: center;
}
.userbox .userinfo {
	display: flex;
	flex-direction: column;
  width: 750rpx;
  z-index: 100;
	align-items: center;
  justify-content: center;
}

.userbox .userinfo .userinfo-avatar {
  display: block;
	width: 160rpx;
	height: 160rpx;
  margin: 20rpx 0;
  border: 5rpx solid #eee;
  border-radius: 50%;
}

.userbox .userinfo .userinfo-avatar-no {
  display: block;
	width: 160rpx;
	height: 160rpx;
  margin: 20rpx 0;
  border: 5rpx solid #eee;
  border-radius: 5%;
}

.userbox .userinfo .userinfo-text{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userbox .userinfo .userinfo-text .userinfo-nickname {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.userbox .userInfoMask{
  width: 100%;
  z-index: 1;
  position: relative;
  bottom: 0rpx;
  border-top-left-radius: 70%;
  border-top-right-radius: 70%;
  background-color: #FFF;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.phoneNumber{
  align-items: center;
  font-size: 24rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.pin-phoneNumber{
  align-items: center;
  margin-bottom: 10rpx;
  padding: 0 10rpx;
  font-size: 20rpx;
  color: #ff5577;
  background-color: #ffe8ee;
  border-radius: 1% solid #ffe8ee;
}

.userbox .my-sign{
  position: absolute;
  top: 10rpx;
  right: 30rpx;
  z-index: 100;
  margin-top: 20rpx;
  font-size: 24rpx;
}

.h-contents{
  z-index: 100;
  width: 100%;
  height: 125rpx;
  margin-bottom: 20rpx;
  background-color: #FFF;
  display: flex;
  flex-direction: row;

}

.h-contents .a-item{
  width: 27%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #333;
}


.h-contents .a-item .my{
  display: flex;
  flex-direction: row;
}

.h-contents .a-item-no-right-border{
  width: 19%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #333;
}

.user-menu{
  width: 100%;
  height: auto;
  background: #FFF;
}

.user-menu .item{
  float: left;
  width: 33.333%;
  height: 167.5rpx;
  border-right: 1px solid #EFEFEF;
  border-bottom: 1px solid #EFEFEF;
  text-align: center;
  box-sizing: border-box;
}

.user-menu .item button{
  padding: 0;
  line-height: 1;
}
.user-menu .item button::after{
  border: none;
}
.user-menu .item button.button-hover{
  opacity: 1;
  background-color: #fff;
}

.user-menu .item .a{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: inherit;
  background-color: #fff;
}
.user-menu .item.no-border-right {
  border-right: 0;
}
.user-menu .item.item-bottom {
  border-bottom: 1px solid #EFEFEF;
}
.user-menu .item.no-border-bottom{
  border-bottom: 1px solid #EFEFEF;
  border-right: none;
}
.user-menu .icon{
  margin: 0 auto;
  display: block;
  height: 60rpx;
  width: 60rpx;
  margin-bottom: 16rpx;
}

.user-menu .txt{
  display: block;
  height: auto;
  width: 100%;
  color:#333;
}

.version {
  width:100%;
  height: 30rpx;
	line-height: 30rpx;
	font-size: 24rpx;
	text-align: center;  
}