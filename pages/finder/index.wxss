/* pages/finder/index.wxss */

/**index.wxss**/

@import "../../templates/wxSearch/wxSearch.wxss";

page {
  min-height: 100%;
}

.container {
  background-color: #efefef;
  min-height: 100%;
  overflow-y: auto;
  justify-content: initial;
}

.introduced {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
  margin-top: 100rpx;
}
.margin-top-0 {
  margin-top: 0 !important;
}

.introduced .introudced-img {
  width: 175rpx;
  height: 56rpx;
  margin: auto;
}

.introduced .introduced-text {
  font-size: 32rpx;
}

.search-view {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 100rpx;
  background: gray;
  display: flex;
  flex-direction: column;
}

.serarch-content {
  position: fixed;
  top: 0;
  z-index: 501;
  width: 100%;
  height: 70rpx;
  padding: 0 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-icon-view{
  width:70rpx;
  height:70rpx;
  background-color:white;
  align-items: center;
  display: flex;
  flex-direction: row;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.search-icon {
  margin-left: 15rpx;
}

.search-input {
  width: 450rpx;
  height: 70rpx;
  font-size: 28rpx;
  background-color: white;
}

.search-btn {
  width: 130rpx;
  height: 70rpx;
  margin-left: 0;
  background-color: blueviolet;
  font-size: 28rpx;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color: #fff;
  border: none;
}

.coupons {
  width: 100%;
  height: auto;
  background-color: #efefef;
}

.more-things {
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #efefef;
}

.padding-bottom {
  padding-bottom: 220rpx;
}


/* 增加的优惠券样式 */
.coupon-item {
  min-height: 300rpx;
  background: #ffffff;
  width: 100%;
  margin: 0 20rpx 28rpx;
  border-radius: 12rpx;
}
.coupon-item:first-child {
  margin-top: 20rpx;
}
.coupon-item .color-line {
  height: 28rpx;
  background-color: #00afb4;
  box-shadow: 0rpx 2rpx 5rpx 0rpx rgba(255, 255, 255, 0.79);
  border-radius: 12rpx 12rpx 0 0;
}
.coupon-item .coupon-content__amount {
  position: relative;
  margin-right: 170rpx;
}
.coupon-item .coupon-content__amount .exchange {
  font-size: 28rpx;
  border-radius: 8rpx;
  font-weight: 700;
  background-color: #00afb4;
  border: 1rpx solid #00afb4;
  margin-left: 20rpx;
  position: absolute;
  right: -170rpx;
  bottom: 0;
}
.coupon-item .coupon-content__amount .symbol,
.coupon-item .coupon-content__amount .cost,
.coupon-item .coupon-content__amount .type {
  font-size: 55rpx;
  color: #d20d0d;
  font-weight: 500;
}
.coupon-item .coupon-content__amount .cost {
  margin-right: 10rpx;
  font-weight: 700;
}
.coupon-item .coupon-content__amount .type {
  font-size: 30rpx;
  font-weight: 700;
}
.coupon-item .coupon-body {
  padding: 32rpx;
}
.coupon-item .coupon-content__detail {
  position: relative;
}
.coupon-item .coupon-content__detail::before,
.coupon-item .coupon-content__detail::after {
  width: 14rpx;
  height: 14rpx;
  position: absolute;
  bottom: 0;
  background-color: #efefef;
}
.coupon-item .coupon-content__detail::before {
  content: ' ';
  left: -32rpx;
  border-top-right-radius: 100%;
}
.coupon-item .coupon-content__detail::after {
  content: ' ';
  right: -32rpx;
  border-top-left-radius: 100%;
}

.coupon-content__other::before,
.coupon-content__other::after {
  width: 14rpx;
  height: 14rpx;
  position: absolute;
  top: 0;
  background-color: #efefef;
}
.coupon-content__other::before {
  content: ' ';
  left: -32rpx;
  border-bottom-right-radius: 100%;
}
.coupon-content__other::after {
  content: ' ';
  right: -32rpx;
  border-bottom-left-radius: 100%;
}

.coupon-item .coupon-content__detail .coupon-content__condition {
  font-size: 28rpx;
  color: #2e2f33;
  margin: 9rpx 0;
}
.coupon-item .coupon-content__detail .coupon-content__describe {
  font-size: 24rpx;
  color: #999999;
  padding-bottom: 20rpx;
}
.coupon-item .coupon-content__detail .coupon-content__describe.margin {
  padding-top: 38rpx;
}
.coupon-item .coupon-content__other {
  position: relative;
  font-size: 24rpx;
}
.coupon-item .coupon-content__other .coupon-content__other--info {
  border-top: 1rpx dashed #00afb4;
  padding-top: 20rpx;
  display: flex;
}
.coupon-item .coupon-content__other .time,
.coupon-item .coupon-content__other .condition {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.coupon-item .coupon-content__other .time {
  color: #999999;
}
.coupon-item .coupon-content__other .condition {
  color: #d20d0d;
  text-align: right;
}

.card {
  background-color: #fff;
  margin: 30rpx;
  border-radius: 20rpx;
}
.card__image {
  overflow: hidden;
}
.card__image image {
  display: block;
  width: 100%;
  object-fit: cover;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.card__title {
  color: #000;
  font-size: 28rpx;
  margin: 20rpx 20rpx 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.card__summary {
  margin: 8rpx 20rpx 20rpx;
  color: #999;
  font-size: 24rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  display: -webkit-inline-box;
}
